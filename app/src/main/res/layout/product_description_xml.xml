<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#ff0000"

        android:text="BMP180 DIGITAL BAROMETIC \n PRESSURE SENSOR MODULE"
        android:textSize="30sp" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_launcher_background"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_launcher_background"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_launcher_background"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_launcher_background"
                    tools:srcCompat="@tools:sample/avatars" />

            </LinearLayout>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_android_black_24dp" />
                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_android_black_24dp" />
                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_android_black_24dp" />
                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_android_black_24dp" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"

            android:text="BMP180 DIGITAL BAROMETIC \n PRESSURE SENSOR MODULE"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="RS 75 inc taxes"
            android:textColor="#00ff00"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="*Sensor Type:BMP180 barometric pressure sensor \nNo of pins: 5\n Header : not soldered \n 1.8 to 3.6V supply voltage \n Low power consumption .5uA \n I2C interface \n Max 12C speed:3.5 Mhz \n very low noise \n"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="enter your pincode"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:text="CHECK"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="#ff0000"
            android:textSize="30dp"
            android:text="ADD TO CART"
            android:layout_marginTop="20dp"
            />




    </LinearLayout>
    </ScrollView>

</LinearLayout>

